<div class="container mt-4">
  <h1 class="mb-4">All Entries</h1>

  <div class="list-group">
    <% @entries.each do |entry| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <span>
          <%= entry.name %>
          <%= entry.link %>
        </span>
        <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this Project?" }, class: "btn btn-danger btn-sm" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4 d-flex justify-content-center">
    <%= link_to "New Entry", new_entry_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>



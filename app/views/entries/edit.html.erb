<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Add the Google Fonts link to include Roboto font -->
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

  <!-- Add Bootstrap CSS link -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

  <!-- Add a title for accessibility -->
  <title>My Travel Diary - Edit Entry</title>
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4 text-center header-title">Edit Entry</h1>

    <%= form_with(model: @entry, class: "mb-4", id: "edit_entry_form", local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :place_name, class: "form-label lead-text" %>
        <%= form.text_field :place_name, class: "form-control" %>
        <% if @entry.errors[:place_name].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:place_name].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :description, class: "form-label lead-text" %>
        <%= form.text_area :description, class: "form-control", style: "height: 200px;" %>
        <% if @entry.errors[:description].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:description].first %>
          </div>
        <% end %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= form.label :latitude, class: "form-label lead-text" %>
          <%= form.text_field :latitude, class: "form-control" %>
          <% if @entry.errors[:latitude].any? %>
            <div class="alert alert-danger mt-2">
              <%= @entry.errors[:latitude].first %>
            </div>
          <% end %>
        </div>
        <div class="col-md-6">
          <%= form.label :longitude, class: "form-label lead-text" %>
          <%= form.text_field :longitude, class: "form-control" %>
          <% if @entry.errors[:longitude].any? %>
            <div class="alert alert-danger mt-2">
              <%= @entry.errors[:longitude].first %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :date_visited, class: "form-label lead-text" %>
        <%= form.date_field :date_visited, class: "form-control" %>
        <% if @entry.errors[:date_visited].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:date_visited].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :link, class: "form-label lead-text" %>
        <%= form.text_field :link, class: "form-control" %>
        <% if @entry.errors[:link].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:link].first %>
          </div>
        <% end %>
      </div>

      <!-- Display current image and allow removal -->
      <% if @entry.image.attached? %>
        <div class="mb-3">
          <strong>Current Image:</strong>
          <%= image_tag @entry.image, class: "img-thumbnail", style: "max-height: 200px;" %>
        </div>
        <div class="form-check mb-3">
          <%= form.label :remove_image, class: "form-check-label" do %>
            <%= form.check_box :remove_image, class: "form-check-input" %>
            Remove Image
          <% end %>
        </div>
      <% end %>

      <!-- Add the image upload field -->
      <div class="mb-3">
        <%= form.label :image, class: "form-label lead-text" %>
        <%= form.file_field :image, class: "form-control-file" %>
        <% if @entry.errors[:image].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:image].first %>
          </div>
        <% end %>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-between">
        <%= form.submit "Update Entry", class: "btn btn-secondary btn-lg" %>
        <%= link_to "Cancel", root_path, class: "btn btn-secondary btn-lg mt-md-0 ms-md-2" %>
      </div>
    <% end %>
  </div>

  <!-- Add Bootstrap JS link -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Add the Google Fonts link to include Roboto font -->
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

  <!-- Add jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- Add Bootstrap CSS link -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

  <!-- Add a title for accessibility -->
  <title>My Travel Diary - New Entry</title>
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4" style="font-family: 'Roboto', sans-serif;">New Entry</h1>

    <%= form_with(model: @entry, class: "mb-4", id: "new_entry_form") do |form| %>
      <div class="mb-3">
        <%= form.label :place_name, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
        <%= form.text_field :place_name, class: "form-control" %>
        <% if @entry.errors[:place_name].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:place_name].first %>
          </div>
        <% end %>
      </div>

      <!-- Add the image upload field -->
      <div class="mb-3">
        <%= form.label :image, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
        <%= form.file_field :image, class: "form-control-file" %>
        <% if @entry.errors[:image].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:image].first %>
          </div>
        <% end %>
      </div>

      <!-- Continue with other existing form fields -->

      <div class="mb-3">
        <%= form.label :description, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
        <%= form.text_area :description, class: "form-control" %>
        <% if @entry.errors[:description].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:description].first %>
          </div>
        <% end %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= form.label :latitude, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
          <%= form.text_field :latitude, class: "form-control" %>
          <% if @entry.errors[:latitude].any? %>
            <div class="alert alert-danger mt-2">
              <%= @entry.errors[:latitude].first %>
            </div>
          <% end %>
        </div>
        <div class="col-md-6">
          <%= form.label :longitude, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
          <%= form.text_field :longitude, class: "form-control" %>
          <% if @entry.errors[:longitude].any? %>
            <div class="alert alert-danger mt-2">
              <%= @entry.errors[:longitude].first %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :date_visited, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
        <%= form.date_field :date_visited, class: "form-control" %>
        <% if @entry.errors[:date_visited].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:date_visited].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :link, class: "form-label", style: "font-family: 'Roboto', sans-serif;" %>
        <%= form.text_field :link, class: "form-control" %>
        <% if @entry.errors[:link].any? %>
          <div class="alert alert-danger mt-2">
            <%= @entry.errors[:link].first %>
          </div>
        <% end %>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-between">
        <%= form.submit "Submit", class: "btn btn-success btn-lg" %>
        <%= link_to "Back to home", root_path, class: "btn btn-primary btn-lg mt-md-0 ms-md-2" %>
      </div>

    <% end %>
  </div>

  <!-- Add Bootstrap JS link -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
